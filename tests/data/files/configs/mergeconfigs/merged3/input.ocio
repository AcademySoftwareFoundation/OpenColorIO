ocio_profile_version: 2.1

environment: 
  SHOT: shot4
  LUT_PATH: shot3/lut1.clf

search_path: 
  - ./$SHOT
  - ./shot1

roles:
  default: raw
  scene_linear: reference

displays:
  sRGB:
    - !<View> {name: Raw, colorspace: raw}

colorspaces:

  - !<ColorSpace>
    name: reference
    isdata: false

  - !<ColorSpace>
    name: raw
    isdata: true

  - !<ColorSpace>
    name: shot1_lut2_cs
    to_reference: !<FileTransform> {src: shot1/lut2.clf}

  - !<ColorSpace>
    name: plain_lut1_cs
    to_scene_reference: !<FileTransform> {src: lut1.clf}

  - !<ColorSpace>
    name: shot1_lut1_cs
    to_scene_reference: !<FileTransform> {src: shot1/lut1.clf}
